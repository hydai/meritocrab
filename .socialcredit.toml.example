# Example .socialcredit.toml configuration file
# Place this file in the root of your repository to customize credit scoring

# Starting credit for new contributors (default: 100)
starting_credit = 100

# Minimum credit required to open PRs (default: 50)
pr_threshold = 50

# Credit level at which auto-blacklist triggers (default: 0)
# Contributors whose credit drops to or below this threshold are automatically blacklisted
blacklist_threshold = 0

# Scoring deltas for PR opened events
[pr_opened]
spam = -25          # Spam PRs
low = -5            # Low quality PRs
acceptable = 5      # Acceptable PRs
high = 15           # High quality PRs

# Scoring deltas for comment events
[comment]
spam = -10          # Spam comments
low = -2            # Low quality comments
acceptable = 1      # Acceptable comments
high = 3            # High quality comments

# Scoring deltas for PR merged events
[pr_merged]
spam = 0            # Not applicable for merged PRs
low = 0             # Not applicable for merged PRs
acceptable = 20     # Standard merged PR bonus
high = 20           # High quality merged PR bonus

# Scoring deltas for review submitted events
[review_submitted]
spam = 0            # Not applicable for reviews
low = 0             # Not applicable for reviews
acceptable = 5      # Standard review bonus
high = 5            # High quality review bonus
